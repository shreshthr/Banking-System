pipeline {
    agent any
    
    stages {
        stage('Checkout Code') {
            steps {
                // Clones the code from the Git repository
                git branch: 'main', url: 'https://github.com/shreshthr/Banking-System.git'
            }
        }
        
        stage('Build') {
            steps {
                // Run the Gradle build using the Windows batch command
                bat 'gradlew.bat clean build'
            }
        }
        
        stage('Test') {
            steps {
                // Run the Gradle test task
                bat 'gradlew.bat test'
            }
        }
    }
    
    post {
        always {
            // Archive JAR files or other build artifacts
            archiveArtifacts artifacts: 'build/libs/*.jar', allowEmptyArchive: true
            
            // Publish JUnit test results for test reporting
            junit 'build/test-results/test/*.xml'
        }
        failure {
            // Send a notification in case of failure (if configured)
            mail to: 'your-email@example.com',
                 subject: "Build Failed in Jenkins Pipeline",
                 body: "The Jenkins build for the Banking System project has failed. Please review the console output for details."
        }
    }
}
